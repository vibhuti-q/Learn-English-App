<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="regular">
        <item name="fontFamily">@font/calibri</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="semiBold">
        <item name="fontFamily">@font/calibri</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!-- Remove actionbar. -->
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationView" />

    <style name="NavigationView.Item" parent="NavigationView" />

    <style name="NavigationView.Item.Button" parent="NavigationView.Item.Layout">
        <item name="android:clickable">true</item>
    </style>

    <style name="NavigationView.Item.Layout" parent="NavigationView.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/fifthcard</item>
        <item name="android:textColorSecondary">@color/fifthcard</item>
        <item name="colorControlNormal">@color/fifthcard</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- SearchView iÃ§in -->
    <style name="SearchTextViewTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        <item name="android:textColor">@color/colorTextHint</item>
        MyDialogTheme
    </style>

    <style name="expandedTitleText" parent="@android:style/TextAppearance">

        <item name="android:textSize">16sp</item>

    </style>

    <style name="SynonymTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="LightFavWordTextStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="BlackCursorSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

    <style name="PronunciationTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/secondaryColorVariant</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <color name="colorTextHint">#c6c6c6</color>

</resources>
